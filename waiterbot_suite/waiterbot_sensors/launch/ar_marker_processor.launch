<launch>
  <arg name="global_marker_filename" default="$(find waiterbot_sensors)/resources/example_global_markers.yaml"/>
  <arg name="global_marker_left_id" default="3"/>
  <arg name="global_marker_right_id" default="0"/>
  <arg name="global_marker_dist"    default="0.26"/>

  <node name="ar_marker_processor" pkg="waiterbot_sensors" type="ar_marker_processor" respawn="false" output="screen">
    <param name="global_marker_filename" value="$(arg global_marker_filename)"/>
    <param name="global_marker_left_id" value="$(arg global_marker_left_id)"/>
    <param name="global_marker_right_id" value="$(arg global_marker_right_id)"/>
    <param name="global_marker_dist" value="$(arg global_marker_dist)"/>
  </node>
</launch>
