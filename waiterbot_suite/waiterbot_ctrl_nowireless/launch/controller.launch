<!--
  Waiterbot controller No wireless version
  -->
<launch>
  <arg name="map_name" default="edu_room_cropped"/>
  <arg name="initial_pose_x" default="2.0"/>
  <arg name="initial_pose_y" default="2.0"/>
  <arg name="initial_pose_a" default="0.0"/>
  <arg name="waypoint_filename" default="$(find waiterbot_ctrl_nowireless)/param/waypoints.yaml"/>
  <arg name="loc_vm" default="vending_machine"/>
  <arg name="loc_customer" default="customer"/>

  <!--  ********** Alvar AR markers tracker ***********  -->
  <!--
  <include file="$(find waiterbot_ctrl_nowireless)/launch/includes/_ar_tracker.launch">
    <arg name="max_frequency" value="4.0"/>  This is a CPU-hungry bastard; reduce its rate  
  </include>
  -->

  <!--  ************* Waiterbot Master controller **************  -->
  <include file="$(find waiterbot_ctrl_nowireless)/launch/includes/_master_ctrl.launch">
    <arg name="loc_vm" value ="$(arg loc_vm)"/>
    <arg name="loc_customer" value="$(arg loc_customer)"/>
  </include>

  <!-- ************* Waypoint Manager *********** --> 
  <node pkg="yocs_waypoint_manager" name="waypoint_manager" type="waypoint_manager" output="screen">
    <param name="filename" value="$(arg waypoint_filename)"/>
  </node>

  <!--  ****** Geometric and semantic map servers *****  -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find waiterbot_ctrl_nowireless)/resources/maps/$(arg map_name).yaml">
    <param name="frame_id" value="/map"/>
  </node>

  <!--  ************** Rosnav move base ***************  -->
  <include file="$(find waiterbot_controller)/launch/includes/_move_base.launch"/>

  <!--  ******************** Amcl *********************  -->
  <include file="$(find waiterbot_controller)/launch/includes/_amcl.launch">
    <arg name="scan_topic" value="scan"/>
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>
</launch>
